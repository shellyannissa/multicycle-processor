#! /opt/homebrew/Cellar/icarus-verilog/12.0/bin/vvp
:ivl_version "12.0 (stable)";
:ivl_delay_selection "TYPICAL";
:vpi_time_precision + 0;
:vpi_module "/opt/homebrew/Cellar/icarus-verilog/12.0/lib/ivl/system.vpi";
:vpi_module "/opt/homebrew/Cellar/icarus-verilog/12.0/lib/ivl/vhdl_sys.vpi";
:vpi_module "/opt/homebrew/Cellar/icarus-verilog/12.0/lib/ivl/vhdl_textio.vpi";
:vpi_module "/opt/homebrew/Cellar/icarus-verilog/12.0/lib/ivl/v2005_math.vpi";
:vpi_module "/opt/homebrew/Cellar/icarus-verilog/12.0/lib/ivl/va_math.vpi";
S_0x125004890 .scope module, "tb_program_counter" "tb_program_counter" 2 1;
 .timescale 0 0;
v0x12501b700_0 .var "clk", 0 0;
v0x12501b7a0_0 .var "next_pc", 15 0;
v0x12501b850_0 .net "pc", 15 0, v0x12501b540_0;  1 drivers
v0x12501b920_0 .var "reset", 0 0;
S_0x125004a00 .scope module, "uut" "program_counter" 2 10, 3 1 0, S_0x125004890;
 .timescale 0 0;
    .port_info 0 /INPUT 1 "clk";
    .port_info 1 /INPUT 1 "reset";
    .port_info 2 /INPUT 16 "next_pc";
    .port_info 3 /OUTPUT 16 "pc";
v0x125008f20_0 .net "clk", 0 0, v0x12501b700_0;  1 drivers
v0x12501b490_0 .net "next_pc", 15 0, v0x12501b7a0_0;  1 drivers
v0x12501b540_0 .var "pc", 15 0;
v0x12501b600_0 .net "reset", 0 0, v0x12501b920_0;  1 drivers
E_0x1250097f0 .event posedge, v0x12501b600_0, v0x125008f20_0;
    .scope S_0x125004a00;
T_0 ;
    %wait E_0x1250097f0;
    %load/vec4 v0x12501b600_0;
    %flag_set/vec4 8;
    %jmp/0xz  T_0.0, 8;
    %pushi/vec4 0, 0, 16;
    %assign/vec4 v0x12501b540_0, 0;
    %jmp T_0.1;
T_0.0 ;
    %load/vec4 v0x12501b490_0;
    %assign/vec4 v0x12501b540_0, 0;
T_0.1 ;
    %jmp T_0;
    .thread T_0;
    .scope S_0x125004890;
T_1 ;
    %delay 5, 0;
    %load/vec4 v0x12501b700_0;
    %inv;
    %store/vec4 v0x12501b700_0, 0, 1;
    %jmp T_1;
    .thread T_1;
    .scope S_0x125004890;
T_2 ;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x12501b700_0, 0, 1;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x12501b920_0, 0, 1;
    %pushi/vec4 0, 0, 16;
    %store/vec4 v0x12501b7a0_0, 0, 16;
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x12501b920_0, 0, 1;
    %delay 10, 0;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x12501b920_0, 0, 1;
    %delay 10, 0;
    %vpi_call 2 35 "$dumpfile", "waveform/program_counter_tb.vcd" {0 0 0};
    %vpi_call 2 36 "$dumpvars", 32'sb00000000000000000000000000000000, S_0x125004890 {0 0 0};
    %load/vec4 v0x12501b850_0;
    %cmpi/ne 0, 0, 16;
    %jmp/0xz  T_2.0, 4;
    %vpi_call 2 40 "$display", "Test 1 failed: PC should be 0 after reset." {0 0 0};
    %jmp T_2.1;
T_2.0 ;
    %vpi_call 2 42 "$display", "Test 1 passed: PC is 0 after reset." {0 0 0};
T_2.1 ;
    %pushi/vec4 5, 0, 16;
    %store/vec4 v0x12501b7a0_0, 0, 16;
    %delay 10, 0;
    %load/vec4 v0x12501b850_0;
    %cmpi/ne 5, 0, 16;
    %jmp/0xz  T_2.2, 4;
    %vpi_call 2 49 "$display", "Test 2 failed: PC should update to 5." {0 0 0};
    %jmp T_2.3;
T_2.2 ;
    %vpi_call 2 51 "$display", "Test 2 passed: PC updated to 5." {0 0 0};
T_2.3 ;
    %pushi/vec4 16, 0, 16;
    %store/vec4 v0x12501b7a0_0, 0, 16;
    %delay 10, 0;
    %load/vec4 v0x12501b850_0;
    %cmpi/ne 16, 0, 16;
    %jmp/0xz  T_2.4, 4;
    %vpi_call 2 58 "$display", "Test 3 failed: PC should update to 10." {0 0 0};
    %jmp T_2.5;
T_2.4 ;
    %vpi_call 2 60 "$display", "Test 3 passed: PC updated to 10." {0 0 0};
T_2.5 ;
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x12501b920_0, 0, 1;
    %delay 10, 0;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x12501b920_0, 0, 1;
    %load/vec4 v0x12501b850_0;
    %cmpi/ne 0, 0, 16;
    %jmp/0xz  T_2.6, 4;
    %vpi_call 2 68 "$display", "Test 4 failed: PC should reset to 0." {0 0 0};
    %jmp T_2.7;
T_2.6 ;
    %vpi_call 2 70 "$display", "Test 4 passed: PC reset to 0." {0 0 0};
T_2.7 ;
    %vpi_call 2 74 "$finish" {0 0 0};
    %end;
    .thread T_2;
# The file index is used to find the file name in the following table.
:file_names 4;
    "N/A";
    "<interactive>";
    "tb_program_counter.v";
    "program_counter.v";
